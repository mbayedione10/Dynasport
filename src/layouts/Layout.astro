---
import '../styles/global.css';
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | DYNASPORTS</title>
    <meta name="description" content={description} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Montserrat:wght@700;800&display=swap" rel="stylesheet" />
    <ViewTransitions />
  </head>
  <body class="min-h-screen bg-white">
    <slot />
  </body>
</html>

<script>
  // Réinitialiser les composants dynamiques après les transitions de page
  document.addEventListener('astro:page-load', () => {
    // Réinitialiser les carousels si le script swiper existe
    if (typeof window.initializeCarousels === 'function') {
      window.initializeCarousels();
    }
    
    // Réinitialiser les cartes si le script maplibre existe
    if (typeof window.initializeMap === 'function') {
      window.initializeMap();
    }
    
    // Réinitialiser les animations de témoignages
    if (typeof window.initializeTestimonials === 'function') {
      window.initializeTestimonials();
    }
  });
</script>
